div(class='flex flex-col md:flex-row md:gap-10 md:justify-center md:items-center')
  div(class='md:pb-3')
    img(class='rounded-md max-h-[50vh]', src=poster||Poster)
    div(class='flex flex-row justify-between gap-3 items-baseline p-1 mt-5')
      h1 #{title || Title}
      p #{year || Year}
    p(class='pt-3 pb-7') #{plot || Plot}
  div(class='md:h-[calc(100vh-6rem)] md:pr-[14vw] md:overflow-y-auto md:py-12 md:mt-24 md:w-full')
    #current.flex.flex-col.gap-3.relative
      div(class='flex flex-col gap-3 child:flex child:flex-row md:child:flex-col md:child:justify-between child:gap-2 md:child:my-3')
        div
          label Rated
          p #{rated || Rated}
        div
          label Runtime
          p #{runtime || Runtime}
        div
          label Genre
          p #{genre || Genre}
        div
          label Director
          p #{director || Director}
        div
          if writer && writer.includes(",")
            label Writers
          else
            label Writer
          p #{writer || Writer}
      div(class='sticky bottom-0 pb-8 gap-3 flex flex-row justify-end md:justify-start items-center')
        a.button(hx-target='#main-component', hx-get=`http://localhost:3000/api/movies/${Id || id}`) Edit
        a.button(hx-target='#main-component', hx-delete=`http://localhost:3000/api/movies/${Id || id}`) Delete
        
